<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="200dp"
    android:layout_height="320dp"
    android:layout_margin="20dp"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:clickable="true"
    android:background="@drawable/bg_home_activity_all">

    <ImageView
        android:id="@+id/iv_home_all"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:duplicateParentState="true"
        android:src="@drawable/home_update" />

    <com.fengjw.tvhelper.recenttask.utils.ScrollTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/activity_home_update"
        android:textColor="@android:color/white"
        android:gravity="center_horizontal"
        android:textSize="30sp"
        android:layout_below="@+id/iv_home_all"
        android:layout_centerHorizontal="true"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        />

</RelativeLayout>