<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/commen_background"
                tools:context=".NewMainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="30dp"
        android:text="@string/app_name"
        android:textColor="@android:color/white"
        android:textSize="45sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:layout_marginTop="50dp"
            android:layout_marginBottom="50dp"
            android:layout_width="200dp"
            android:layout_height="300dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:descendantFocusability="beforeDescendants"
            android:id="@+id/rl_home_update"
            android:padding="12dp"
            android:focusable="true"
            android:background="@drawable/bg_home_activity_all">

            <ImageView
                android:id="@+id/iv_home_all"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:duplicateParentState="true"
                android:src="@drawable/home_update" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/iv_home_all"
                android:layout_marginTop="40dp"
                android:text="@string/activity_home_update"
                android:textColor="@android:color/white"
                android:textSize="30sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="50dp"
            android:layout_marginBottom="50dp"
            android:id="@+id/rl_home_recent"
            android:layout_width="200dp"
            android:layout_height="300dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:descendantFocusability="beforeDescendants"
            android:focusable="true"
            android:background="@drawable/bg_home_activity_video">

            <ImageView
                android:id="@+id/iv_home_video"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:duplicateParentState="true"
                android:src="@drawable/home_recentlist" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/iv_home_video"
                android:layout_marginTop="40dp"
                android:text="@string/activity_home_recent_list"
                android:textColor="@android:color/white"
                android:textSize="30sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="50dp"
            android:layout_marginBottom="50dp"
            android:id="@+id/rl_home_file"
            android:layout_width="200dp"
            android:layout_height="300dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:descendantFocusability="beforeDescendants"
            android:focusable="true"
            android:background="@drawable/bg_home_activity_music">

            <ImageView
                android:id="@+id/iv_home_music"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:duplicateParentState="true"
                android:src="@drawable/home_file" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/iv_home_music"
                android:layout_marginTop="40dp"
                android:text="@string/activity_home_file_manager"
                android:textColor="@android:color/white"
                android:textSize="30sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="50dp"
            android:layout_marginBottom="50dp"
            android:id="@+id/rl_home_memory"
            android:layout_width="200dp"
            android:layout_height="300dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:descendantFocusability="beforeDescendants"
            android:focusable="true"
            android:background="@drawable/bg_home_activity_picture">

            <ImageView
                android:id="@+id/iv_home_picture"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:duplicateParentState="true"
                android:src="@drawable/home_memory" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/iv_home_picture"
                android:layout_marginTop="40dp"
                android:text="@string/activity_home_memory_manager"
                android:textColor="@android:color/white"
                android:textSize="30sp" />

        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>
