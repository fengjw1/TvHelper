<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/commen_background"
                tools:context=".NewMainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="30dp"
        android:text="@string/app_name"
        android:textColor="@android:color/white"
        android:textSize="45sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:layout_marginTop="50dp"
            android:layout_marginBottom="50dp"
            android:layout_width="200dp"
            android:layout_height="300dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:id="@+id/rl_home_update"
            android:padding="12dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:clickable="true"
            android:background="@drawable/bg_home_activity_all">

            <ImageView
                android:id="@+id/iv_home_all"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/home_update" />

            <com.fengjw.tvhelper.recenttask.utils.ScrollTextView
                android:id="@+id/tv_home_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/iv_home_all"
                android:layout_marginTop="20dp"
                android:layout_marginRight="6dp"
                android:layout_marginLeft="6dp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:clickable="false"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:text="@string/activity_home_update"
                android:textColor="@android:color/white"
                android:gravity="center_horizontal"
                android:textSize="22sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_home_recent"
            android:layout_width="200dp"
            android:layout_height="300dp"
            android:layout_marginBottom="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="50dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:clickable="true"
            android:background="@drawable/bg_home_activity_video">

            <ImageView
                android:id="@+id/iv_home_video"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/home_recentlist"/>

            <com.fengjw.tvhelper.recenttask.utils.ScrollTextView
                android:id="@+id/tv_home_recent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_home_video"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_marginRight="6dp"
                android:layout_marginLeft="6dp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:clickable="false"
                android:ellipsize="marquee"
                android:gravity="center_horizontal"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:text="@string/activity_home_recent_list"
                android:textColor="@android:color/white"
                android:textSize="22sp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="50dp"
            android:layout_marginBottom="50dp"
            android:id="@+id/rl_home_file"
            android:layout_width="200dp"
            android:layout_height="300dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:clickable="true"
            android:background="@drawable/bg_home_activity_music">

            <ImageView
                android:id="@+id/iv_home_music"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/home_file" />

            <com.fengjw.tvhelper.recenttask.utils.ScrollTextView
                android:id="@+id/tv_home_file"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/iv_home_music"
                android:layout_marginTop="20dp"
                android:layout_marginRight="6dp"
                android:layout_marginLeft="6dp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:clickable="false"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:text="@string/activity_home_file_manager"
                android:textColor="@android:color/white"
                android:gravity="center_horizontal"
                android:textSize="22sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="50dp"
            android:layout_marginBottom="50dp"
            android:id="@+id/rl_home_memory"
            android:layout_width="200dp"
            android:layout_height="300dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:clickable="true"
            android:background="@drawable/bg_home_activity_picture">

            <ImageView
                android:id="@+id/iv_home_picture"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/home_memory" />

            <com.fengjw.tvhelper.recenttask.utils.ScrollTextView
                android:id="@+id/tv_home_memory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="23dp"
                android:layout_marginRight="6dp"
                android:layout_marginLeft="6dp"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:clickable="false"
                android:text="@string/activity_home_memory_manager"
                android:textColor="@android:color/white"
                android:gravity="center_horizontal"
                android:textSize="22sp"
                android:layout_below="@+id/iv_home_picture"
                android:layout_centerHorizontal="true">
            </com.fengjw.tvhelper.recenttask.utils.ScrollTextView>

        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>
